<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0 rounded-4">
            <div class="card-body p-4">
                <h3 class="mb-4 fw-bold"><%= title %></h3>
                
                <form action="/admin/events<%= event ? '/' + event.id + '?_method=PUT' : '' %>" method="POST">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Nama Event</label>
                            <input type="text" name="name" class="form-control" value="<%= event ? event.name : '' %>" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Vendor</label>
                            <input type="text" name="vendor" class="form-control" value="<%= event ? event.vendor_name : '' %>" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Tanggal</label>
                            <input type="date" name="date" class="form-control" value="<%= event ? event.date : '' %>" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Waktu</label>
                            <input type="time" name="time" class="form-control" value="<%= event ? event.time : '' %>" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Lokasi</label>
                            <input type="text" name="location" class="form-control" value="<%= event ? event.location : '' %>" required>
                        </div>
                        
                        <div class="col-12">
                            <label class="form-label fw-semibold">Lineup Artis / Band</label>
                            <div id="lineup-container">
                                <% if (event && event.lineups && event.lineups.length > 0) { %>
                                    <% event.lineups.forEach(artist => { %>
                                        <div class="input-group mb-2">
                                            <span class="input-group-text">ðŸŽ¤</span>
                                            <input type="text" name="lineups[]" class="form-control" value="<%= artist.artist_name %>" required>
                                            <button type="button" class="btn btn-outline-danger" onclick="this.parentElement.remove()">X</button>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <div class="input-group mb-2">
                                        <span class="input-group-text">ðŸŽ¤</span>
                                        <input type="text" name="lineups[]" class="form-control" placeholder="Nama Artis/Band" required>
                                        <button type="button" class="btn btn-outline-danger" onclick="this.parentElement.remove()">X</button>
                                    </div>
                                <% } %>
                            </div>
                            <button type="button" class="btn btn-sm btn-success mt-1" onclick="addLineup()">+ Tambah Artis Lain</button>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Harga Regular</label>
                            <input type="number" name="price_reg" class="form-control" value="<%= event ? event.price_regular : '' %>" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Harga VIP</label>
                            <input type="number" name="price_vip" class="form-control" value="<%= event ? event.price_vip : '' %>" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">URL Gambar</label>
                            <input type="text" name="image_url" class="form-control" value="<%= event ? event.image_url : '' %>" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Deskripsi</label>
                            <textarea name="description" class="form-control" rows="3"><%= event ? event.description : '' %></textarea>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a href="/admin/dashboard" class="btn btn-secondary">Batal</a>
                        <button type="submit" class="btn btn-primary px-4 fw-bold">Simpan Event</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function addLineup() {
        const container = document.getElementById('lineup-container');
        const div = document.createElement('div');
        div.className = 'input-group mb-2';
        div.innerHTML = `
            <span class="input-group-text">ðŸŽ¤</span>
            <input type="text" name="lineups[]" class="form-control" placeholder="Nama Artis/Band" required>
            <button type="button" class="btn btn-outline-danger" onclick="this.parentElement.remove()">X</button>
        `;
        container.appendChild(div);
    }
</script>

<%- include('../partials/footer') %>